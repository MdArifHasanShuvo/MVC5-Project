@model IEnumerable<PublisherAndBooks.Models.Book>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col">
        <div class="display-5">List of Book</div>
        <div class="d-flex justify-content-end mb-1">
            <a href="@Url.Action("Create", "Books")" class="btn btn-success rounded-circle"><i class="fa fa-plus"></i></a>
        </div>
        <table class="table table-bordered table-striped table-sm">
            <thead class="bg-success text-white">
                <tr>
                    <th>Book Pic</th>
                    <th>@Html.DisplayNameFor(x => x.Title)</th>
                    <th>@Html.DisplayNameFor(x => x.Genre)</th>
                    <th>@Html.DisplayNameFor(x => x.Rating)</th>
                    <th>@Html.DisplayNameFor(x => x.Publish)</th>
                    <th>@Html.DisplayNameFor(x => x.Publisher.PublisherName)</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                <tr>
                    <td><img src="~/Pictures/@b.Picture" width="40" class="img-thumbnail rounded-circle" /></td>
                    <td>@Html.DisplayFor(x => b.Title) </td>
                    <td>@Html.DisplayFor(x => b.Genre) </td>
                    <td>@Html.DisplayFor(x => b.Rating) </td>
                    <td>@Html.DisplayFor(x => b.Publish) </td>
                    <td>@Html.DisplayFor(x => b.Publisher.PublisherName) </td>

                    <td style="width:140px;" class="text-center">

                        <a title="Edit this item" href="@Url.Action("Edit", "Books", new { id=b.BookId})" class="btn btn-primary btn-sm rounded-circle"><i class="fa fa-pencil"></i></a>
                        <a title="Delete this item" href="@Url.Action("Delete", "Books", new { id=b.BookId})" class="btn btn-danger btn-sm rounded-circle"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section styles {

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
}
