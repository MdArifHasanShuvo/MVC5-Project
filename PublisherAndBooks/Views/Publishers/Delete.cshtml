@model PublisherAndBooks.Models.Publisher
@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-12">
        <h3 class="text-danger">Are you sure Delete <span class="display-6 text-info"> @Html.DisplayFor(x => x.PublisherName) </span> </h3>
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.PublisherName, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-5">
        @Html.DisplayFor(x => x.PublisherName)
    </div>
</div>
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.Establish, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
    <div class="col-5">
        @Html.DisplayFor(x => x.Establish)
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.PublisherId)
    <div class="form-group row mb-1">
        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </div>
    </div>
}
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>