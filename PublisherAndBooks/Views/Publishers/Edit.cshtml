@model PublisherAndBooks.Models.Publisher
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() // Server Other field not add
    @Html.HiddenFor(x => x.PublisherId)
    <div class="row">
        <div class="col-12">
            <h3 class="text-secondary">Are you sure Edit Publisher - @Html.DisplayFor(x => x.PublisherName)</h3>
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.PublisherName, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(x => x.PublisherName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.PublisherName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Establish, new { @class = "col-form-label col-form-label-sm col-2 text-end" })
        <div class="col-5">
            @Html.TextBoxFor(x => x.Establish, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.Establish, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">

        <div class="col-10 offset-2">
            <button type="submit" class="btn btn-outline-success">Update</button>
        </div>
    </div>
}
<div class="row">
    <div class="col-12">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section styles{

    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/jquery.daterangepicker/daterangepicker.jQuery.js"></script>
    <script>
        $("#Establish").datepicker({
            format: 'yyyy-mm-dd'
        })
    </script>
}
